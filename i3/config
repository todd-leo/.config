# Gap
gaps inner 20

set $mode_gaps Cancel Gaps: [y]es | [n]o | [m]ore | [l]ess
bindsym $mod+F11 mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym Y gaps inner all set 0
    bindsym N gaps inner all set 20
    bindsym M gaps inner all set 40
    bindsym L gaps inner all set 12
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

